13-213-96-98.sslip.io {
    # Handle SSE notifications endpoint specially
    @sse path /api/notifications/stream
    reverse_proxy @sse backend:8081 {
        flush_interval -1
        header_up Connection keep-alive
        header_up Cache-Control no-cache
    }
    
    # All other requests
    reverse_proxy backend:8081
}
