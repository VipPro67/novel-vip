<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN"
               packages="io.opentelemetry.instrumentation.log4j.appender.v2_17">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{ISO8601} %-5p [%t] %c: %m%n"/>
    </Console>

    <File name="LocalFile" fileName="logs/app.log">
      <PatternLayout pattern="%d{ISO8601} %-5p [%t] %c: %m%n"/>
    </File>

    <!-- Ships logs to Grafana Cloud Loki via OTLP/HTTP -->
    <OpenTelemetry name="GrafanaLoki"
                   captureExperimentalAttributes="true"
                   captureMapMessageAttributes="true"/>
  </Appenders>

  <Loggers>
    <Root level="info">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="LocalFile"/>
      <AppenderRef ref="GrafanaLoki"/>
    </Root>
  </Loggers>
</Configuration>
